@inherits AssetItemForm
@* Consumable Item Form *@

<div class="mt-3">

    <label class="form-label"
           for="consumableManufacturer">
        Manufacturer
    </label>
    <input @bind-value="@Manufacturer"
           class="form-control"
           id="consumableManufacturer"
           placeholder="Enter Manufacturer"
           type="text"/>

    <label class="form-label"
           for="consumableSerialNumber">
        Serial Number
    </label>
    <input @bind-value="@SerialNumber"
           class="form-control"
           id="consumableSerialNumber"
           placeholder="Enter Serial Number"
           type="text"/>

    <label class="form-label"
           for="amount">
        Amount
    </label>
    <input @bind-value="@Amount"
           class="form-control"
           id="amount"
           type="number"/>
</div>
