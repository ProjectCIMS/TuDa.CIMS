@inherits AssetItemForm
<MudForm>

    <ChemicalItemForm/>


    <MudNumericField @bind-Value="Volume"
                     Label="Volume"
                     Placeholder="Enter Volume"
                     Variant="Variant.Filled"
                     FullWidth/>

    <MudNumericField @bind-Value="Pressure"
                     Label="Pressure"
                     Placeholder="Enter Pressure"
                     Variant="Variant.Filled"
                     FullWidth/>

    <MudButton Color="Color.Primary"
               Class="mt-3"
               @onclick="ResetGasCylinderInputs">
        Clear
    </MudButton>
</MudForm>

@code
{
    /// <summary>
    /// Resets the Input lines
    /// </summary>
    protected void ResetGasCylinderInputs()
    {
        Volume = 0;
        Pressure = 0;
    }
}
