@inherits AssetItemCreateForm


@* AssetItemDialog *@


<!-- Generic Modal Button -->
<ModalButton ButtonLabel="Create Item"
             ModalTarget="#createItemDialog"/>

<!-- Modal Header -->
<div aria-hidden="true"
     aria-labelledby="createItemDialogLabel"
     class="fade modal"
     id="createItemDialog"
     tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"
                    id="createItemDialogLabel">
                    Create Item
                </h5>
                <button aria-label="Close"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        type="button">
                </button>
            </div>

            <!-- Modal Body -->
            <AssetItemCreateForm/>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button class="btn btn-secondary"
                        data-bs-dismiss="modal"
                        type="button">
                    Close
                </button>
                <button class="btn btn-primary"
                        type="button"
                        data-bs-dismiss="modal"
                        @onclick="SaveChanges">
                    Save Changes
                </button>
            </div>
        </div>
    </div>
</div>

