@rendermode InteractiveServer

@page "/modal"
<button class="btn btn-primary"
        data-bs-target="#createItemDialog"
        data-bs-toggle="modal"
        type="button">
    Create Item
</button>

@* Modal Content *@
<div aria-hidden="true"
     aria-labelledby="createItemDialogLabel"
     class="fade modal"
     id="createItemDialog"
     tabindex="-1">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title"
                id="createItemDialogLabel">
                Create Item
            </h5>
            <button aria-label="Close"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    type="button">
            </button>
        </div>

        <div class="modal-body">

            <!-- Button Group -->
            <div aria-label="Button group"
                 class="btn-group"
                 role="group">
                <button class="btn btn-primary"
                        @onclick="() => SelectedOption = 1">
                    Chemical
                </button>
                <button class="btn btn-primary"
                        @onclick="() => SelectedOption = 2">
                    Consumable
                </button>
            </div>

            <!-- different inputs dependent on the type of Item -->
            @if (SelectedOption == 1)
            {
                <div class="mt-3">
                    <h4>Chemical Details</h4>

                    <div class="row">

                        <!-- Erste Spalte -->
                        <div class="col-md-6 mb-3">

                            <label class="form-label"
                                   for="chemicalName">
                                Chemical Name
                            </label>
                            <input class="form-control"
                                   id="chemicalName"
                                   placeholder="Enter Chemical Name"
                                   type="text">


                            <label class="form-label"
                                   for="chemicalShop">
                                Shop
                            </label>
                            <input class="form-control"
                                   id="chemicalShop"
                                   placeholder="Enter Shop"
                                   type="text">


                            <label class="form-label"
                                   for="chemicalItemNumber">
                                Item Number
                            </label>
                            <input class="form-control"
                                   id="chemicalItemNumber"
                                   placeholder="Enter ItemNumber"
                                   type="text">


                            <label class="form-label"
                                   for="chemicalNote">
                                Notes
                            </label>
                            <input class="form-control"
                                   id="chemicalNote"
                                   placeholder="Enter Notes"
                                   type="text">

                        </div>


                        <!-- Zweite Spalte -->
                        <div class="col-md-6 mb-3">

                            <label class="form-label"
                                   for="chemicalCas">
                                CAS
                            </label>
                            <input class="form-control"
                                   id="chemicalCas"
                                   placeholder="Enter CAS"
                                   type="text">


                            <label class="form-label"
                                   for="chemicalUnit">
                                Unit
                            </label>
                            <input class="form-control"
                                   id="chemicalUnit"
                                   placeholder="Enter Unit"
                                   type="text">


                        </div>
                    </div>
                </div>
            }
            else if (SelectedOption == 2)
            {
                <div class="mt-3">
                    <h4>Consumable Details</h4>

                    <div class="row">
                        <!-- Erste Spalte -->
                        <div class="col-md-6 mb-3">

                            <label class="form-label"
                                   for="consumableName">
                                Consumable Name
                            </label>
                            <input class="form-control"
                                   id="consumableName"
                                   placeholder="Enter Consumable Name"
                                   type="text">


                            <label class="form-label"
                                   for="chemicalShop">
                                Shop
                            </label>
                            <input class="form-control"
                                   id="chemicalShop"
                                   placeholder="Enter Shop"
                                   type="text">


                            <label class="form-label"
                                   for="consumableItemNumber">
                                Item Number
                            </label>
                            <input class="form-control"
                                   id="consumableItemNumber"
                                   placeholder="Enter ItemNumber"
                                   type="text">


                            <label class="form-label"
                                   for="consumableNote">
                                Notes
                            </label>
                            <input class="form-control"
                                   id="consumableNote"
                                   placeholder="Enter Notes"
                                   type="text">

                        </div>



                        <div class="col-md-6 mb-3">

                            <label class="form-label"
                                   for="consumableManufacturer">
                                Manufacturer
                            </label>
                            <input class="form-control"
                                   id="consumableManufacturer"
                                   placeholder="Enter Manufacturer"
                                   type="text">


                            <label class="form-label"
                                   for="consumableSerialNumber">
                                Serial Number
                            </label>
                            <input class="form-control"
                                   id="consumableSerialNumber"
                                   placeholder="Enter Serial Number"
                                   type="text">


                            <label class="form-label"
                                   for="consumableQuantity">
                                Quantity:
                            </label>
                            <input class="form-control"
                                   id="consumableQuantity"
                                   placeholder="Enter Quantity"
                                   type="number">

                        </div>
                    </div>
                </div>
            }
        </div >


        <div class="modal-footer">
            <button class="btn btn-secondary"
                    data-bs-dismiss="modal"
                    type="button">
                Close
            </button>
            <button class="btn btn-primary"
                    type="button">
                Save Changes
            </button>
        </div>
    </div>
</div>
</div>

@code {

    // selected option between 'Chemical' and 'Consumable'
    private int SelectedOption { get; set; }


}
