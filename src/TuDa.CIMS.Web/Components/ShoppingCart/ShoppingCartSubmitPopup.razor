@using TuDa.CIMS.Shared.Entities
@* Submit Popup *@
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Arbeitsgruppe ausw√§hlen</MudText>
    </TitleContent>
    <DialogContent>
        <MudContainer>
            <MudGrid Justify="Justify.SpaceBetween">
                <ShoppingCartSubmitPopupWorkingGroupSelection @bind-WorkingGroup="@WorkingGroup"
                                                              OnValidationChanged="HandleWorkingGroupValidationChanged"/>
                <ShoppingCartSubmitPopupBuyerSelection @bind-Buyer="@Buyer"
                                                       WorkingGroup="@WorkingGroup"
                                                       OnValidationChanged="HandleBuyerValidationChanged"/>
                <ShoppingCartSubmitPopupPurchaseList PurchaseListEntries="PurchaseEntries"/>
            </MudGrid>
            @if (!isBuyerValid)
            {
                <MudText Color="Color.Error">@buyerValidationMessage</MudText>
            }
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Abbrechen</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Disabled="@(!isFormValid)">Ok</MudButton>
    </DialogActions>
</MudDialog>
