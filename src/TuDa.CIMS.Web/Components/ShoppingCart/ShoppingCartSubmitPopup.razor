@* Submit Popup *@
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Arbeitsgruppe ausw√§hlen</MudText>
    </TitleContent>
    <DialogContent>
        <MudContainer>
            <MudGrid Justify="Justify.SpaceBetween">
                <ShoppingCartSubmitPopupWorkingGroupSelection @bind-WorkingGroup="@WorkingGroup"
                                                              @bind-WorkingGroupIsValid="@WorkingGroupIsValid"/>
                <ShoppingCartSubmitPopupBuyerSelection @bind-Buyer="@Buyer"
                                                       WorkingGroup="@WorkingGroup"
                                                       @bind-BuyerIsValid="@BuyerIsValid"/>
                <ShoppingCartSubmitPopupPurchaseList PurchaseListEntries="PurchaseEntries"/>
            </MudGrid>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Abbrechen</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Disabled="@(!IsValid)">Ok</MudButton>
    </DialogActions>
</MudDialog>
