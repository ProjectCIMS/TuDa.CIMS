@using System.Globalization
<!-- The Dialog for Amount Input -->
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h5">
            Eingeben der Menge
        </MudText>
    </TitleContent>
    <DialogContent>
        <!-- Product View -->
        <MudGrid>
            <MudItem xs="12">
                <MudCard>
                    <MudCardContent>
                        <MudGrid>
                            <!-- Product Name -->
                            <MudItem xs="12">
                                <MudText Typo="Typo.subtitle1">@Product.Name</MudText>
                            </MudItem>
                            <!-- € per Unit -->
                            <ShoppingCartPriceView Product="@Product"/>
                        </MudGrid>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <!-- Amount Input -->
            <MudItem xs="12">
                @if (IsInt())
                    {
                <MudNumericField @bind-Value="AmountInt"
                                 Error="@IsError"
                                 ErrorText="Menge muss größer 0 betragen!"
                                 Label="Menge"
                                 T="int"
                                 Culture="@_de"/>
                }
                else
                {
                <MudNumericField @bind-Value="Amount"
                                 Error="@IsError"
                                 ErrorText="Menge muss größer 0 betragen!"
                                 Label="Menge"
                                 T="double"
                                 Culture="@_de"/>
                }
            </MudItem>
        </MudGrid>
    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Error"
                   OnClick="Cancel">
            Abbrechen
        </MudButton>
        <MudButton Color="Color.Success"
                   OnClick="CheckAndSubmit">
            Hinzufügen
        </MudButton>
    </DialogActions>
</MudDialog>

@code
{
    public CultureInfo _de = CultureInfo.GetCultureInfo("de-DE");
}
