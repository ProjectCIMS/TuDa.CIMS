@using TuDa.CIMS.Shared.Entities
@using TuDa.CIMS.Shared.Entities.Enums

<!--Product Price per Unit-->
<MudItem xs="12">
    <MudText Typo="Typo.subtitle2">
        @PriceText(Product)
    </MudText>
</MudItem>

@code {

    // Product to be shown in Dialog.
    [Parameter] public required AssetItem Product { get; set; }

    /// <summary>
    /// Method to check which price unit to display in dialog.
    /// </summary>
    /// <param name="product">The Product to be shown in Dialog</param>
    /// <returns></returns>
    private string PriceText(AssetItem product) => product switch
    {
        Substance substance => $"{substance.Price:F}€/{substance.PriceUnit.ToAbbreviation()}",
        _ => $"{Product.Price:F}€/Stück"
    };

}
