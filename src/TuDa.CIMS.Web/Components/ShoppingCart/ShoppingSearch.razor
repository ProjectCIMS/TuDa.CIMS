@using TuDa.CIMS.Shared.Entities
@using TuDa.CIMS.Shared.Entities.Enums

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="8" md="8">
        <MudAutocomplete
            T="AssetItem"
            @ref="_autocomplete"
            Clearable="@true"
            AdornmentIcon="@Icons.Material.Filled.Search"
            AdornmentColor="@Color.Primary"
            Label="Items"
            SearchFunc="@Search"
            ToStringFunc="@ToString"
            ValueChanged="@AssetItemSelectedInternal"
            Variant="Variant.Filled"
            Dense=true
            ShowProgressIndicator="true">
        </MudAutocomplete>
        <MudChipSet T="AssetItemType?"
                    @bind-SelectedValue="_selectedAssetItemType"
                    CheckMark
                    SelectionMode="@_selectionMode"
                    Class="my-4">
            <MudChip Color="Color.Dark"
                     T="AssetItemType?"
                     Value="null">
                Alle
            </MudChip>
            <MudChip Color="Color.Primary"
                     T="AssetItemType?"
                     Value="AssetItemType.Chemical">
                Chemikalie
            </MudChip>
            <MudChip Color="Color.Secondary"
                     T="AssetItemType?"
                     Value="AssetItemType.Consumable">
                Verbrauchsmaterial
            </MudChip>
            <MudChip Color="Color.Info"
                     T="AssetItemType?"
                     Value="AssetItemType.GasCylinder">
                Technische Gase
            </MudChip>
            <MudChip Color="Color.Success"
                     T="AssetItemType?"
                     Value="AssetItemType.Solvent">
                Lösung
            </MudChip>
        </MudChipSet>
    </MudItem>
</MudGrid>

@code
{
    private readonly SelectionMode _selectionMode = SelectionMode.SingleSelection;
}
