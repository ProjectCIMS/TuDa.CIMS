@using TuDa.CIMS.Shared.Entities
@namespace TuDa.CIMS.Web.Components.ShoppingCart

@*ShoppingCart SubmitPopup WorkingGroup Selection*@
<MudItem Class="d-flex align-items-center">
    <MudForm @ref="form">
    <MudAutocomplete
        T="WorkingGroup"
        @ref="_autocomplete"
        Clearable="@true"
        AdornmentIcon="@Icons.Material.Filled.Search"
        AdornmentColor="@Color.Primary"
        Value="WorkingGroup"
        Label="Arbeitsgruppe"
        SearchFunc="@Search"
        ToStringFunc="@ToString"
        ValueChanged="OnWorkingGroupChanged"
        Variant="Variant.Filled"
        Dense="true"
        ShowProgressIndicator="true"
        Validation="@(() => ValidateWorkingGroup)"
        Required="true">
        <ItemTemplate>
            <MudItem Class="d-flex align-items-center">
                <MudIconButton Icon="@Icons.Material.Outlined.Info" Class="mr-2">
                </MudIconButton>
                <MudText>@context.Professor.Name</MudText>
            </MudItem>
        </ItemTemplate>
    </MudAutocomplete>
    </MudForm>
</MudItem>

