@inherits AssetItemForm
@* Substance Item Form *@


<MudForm>
    <MudTextField @bind-Value="Cas"
                  Label="CAS"
                  Placeholder="Enter CAS"
                  Variant="Variant.Filled"
                  FullWidth/>

    <MudNumericField @bind-Value="Purity"
                     Label="Purity"
                     Placeholder="Enter Purity"
                     Variant="Variant.Filled"
                     FullWidth/>

    <MudNumericField @bind-Value="BindingSize"
                     Label="Binding Size"
                     Placeholder="Enter Binding Size"
                     Variant="Variant.Filled"
                     FullWidth/>

    <MudButton Color="Color.Primary"
               Class="mt-3"
               @onclick="ResetChemicalInputs">
        Clear
    </MudButton>
</MudForm>

@code
{
    /// <summary>
    /// Resets the Input lines
    /// </summary>
    protected void ResetChemicalInputs()
    {
        Cas = string.Empty;
        Purity = "";
        BindingSize = 0;
    }
}
