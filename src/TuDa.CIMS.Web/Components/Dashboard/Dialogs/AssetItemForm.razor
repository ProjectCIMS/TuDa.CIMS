@using TuDa.CIMS.Shared.Entities.Enums
@* AssetItemForm *@

<MudForm Class="p-2">
    <MudTextField @bind-Value="FormName"
                  Label="Name"
                  Error="@NameIsError"
                  ErrorText="Der Name muss eingegeben werden!"
                  Placeholder="Name eingeben"
                  Variant="Variant.Filled"
                  FullWidth
                  Margin="Margin.Dense"/>
    <MudTextField @bind-Value="FormShop"
                  Label="Lieferant"
                  Error="@ShopIsError"
                  ErrorText="Der Lieferant muss eingegeben werden!"
                  Placeholder="Shop eingeben"
                  Variant="Variant.Filled"
                  FullWidth
                  Margin="Margin.Dense"/>
    <MudTextField @bind-Value="FormItemNumber"
                  Label="Produktnummer"
                  Error="@ItemNumberIsError"
                  ErrorText="Die Produktnummer muss eingegeben werden!"
                  Placeholder="Produktnummer eingeben"
                  Variant="Variant.Filled"
                  FullWidth
                  Margin="Margin.Dense"/>
    <MudNumericField @bind-Value="FormPrice"
                     Format="C"
                     Culture="@_de"
                     T="double"
                     Label="Preis"
                     Error="@PriceIsError"
                     ErrorText="Der Preis muss eingegeben werden!"
                     Placeholder="Preis eingeben"
                     Variant="Variant.Filled"
                     FullWidth
                     Margin="Margin.Dense"/>
    <MudSelect @bind-Value="FormRoom"
               T="Rooms?"
               Label="Raum"
               Error="@RoomIsError"
               ErrorText="Ein Raum muss ausgewählt werden!"
               Variant="Variant.Filled"
               Placeholder="Raum auswählen"
               FullWidth
               Margin="Margin.Dense">

        <MudSelectItem T="Rooms?"
                       Value="null">Nicht ausgewählt
        </MudSelectItem>
        @foreach (var room in Enum.GetValues<Rooms>())
        {
            <MudSelectItem T="Rooms?"
                           Value="@room">@room</MudSelectItem>
        }

    </MudSelect>
    <MudTextField @bind-Value="FormNote"
                  Label="Notiz"
                  Lines="5"
                  Placeholder="Notiz eingeben"
                  Variant="Variant.Outlined"
                  FullWidth
                  Margin="Margin.Dense"/>
    <MudButton Color="Color.Primary"
               Class="mt-3"
               OnClick="ResetInputs">
        Leeren
    </MudButton>
</MudForm>
