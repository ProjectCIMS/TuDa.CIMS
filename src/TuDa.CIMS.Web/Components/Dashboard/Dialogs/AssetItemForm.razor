@inherits AssetItemCreateForm

@* Generic AssetItemForm *@

<MudForm>
    <MudTextField @bind-Value="Name"
                  Label="Name"
                  Placeholder="Enter Name"
                  Variant="Variant.Filled"
                  FullWidth/>

    <MudTextField @bind-Value="Shop"
                  Label="Shop"
                  Placeholder="Enter Shop"
                  Variant="Variant.Filled"
                  FullWidth/>

    <MudTextField @bind-Value="ItemNumber"
                  Label="Item Number"
                  Placeholder="Enter Item Number"
                  Variant="Variant.Filled"
                  FullWidth/>

    <MudTextField @bind-Value="Note"
                  Label="Notes"
                  Placeholder="Enter Notes"
                  Variant="Variant.Filled"
                  FullWidth/>

    <MudTextField @bind-Value="Price"
                  Label="Price"
                  Placeholder="Enter Price"
                  Variant="Variant.Filled"
                  InputType="InputType.Number"
                  FullWidth/>
    <MudButton Color="Color.Primary"
               Class="mt-3"
               @onclick="ResetInputs">
        Clear
    </MudButton>
</MudForm>



@code
{
    /// <summary>
    /// Resets the Input lines
    /// </summary>
    protected void ResetInputs()
    {
        Name = string.Empty;
        Shop = string.Empty;
        ItemNumber = string.Empty;
        Note = string.Empty;
        Price = 0;
    }
}
