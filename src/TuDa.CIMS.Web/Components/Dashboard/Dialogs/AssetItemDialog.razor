<!-- AssetItemDialog -->

<MudDialog>
    <TitleContent>
        <MudContainer Class="d-flex justify-content-between align-items-center"
                      Style="padding: 0; margin: 0; width: 100%;">
            <MudText Typo="Typo.h6">
                Eintrag erstellen
            </MudText>
            <MudIconButton Icon="@Icons.Material.Filled.Close"
                           Color="Color.Inherit"
                           OnClick="Cancel"/>
        </MudContainer>
    </TitleContent>
    <!-- Modal Body -->
    <DialogContent>
        <AssetItemCreateForm @ref="_assetItemCreateForm" OnValidation="@(_ => StateHasChanged())"/>
    </DialogContent>
    <!-- Modal Footer -->
    <DialogActions>
        <MudContainer Class="dialog-footer">
            <MudButton OnClick="Cancel"
                       Color="Color.Secondary"
                       Class="action-button">
                Schließen
            </MudButton>
            <MudButton OnClick="SaveChanges"
                       Color="Color.Success"
                       Variant="Variant.Filled"
                       Class="action-button">
                Speichern
            </MudButton>
        </MudContainer>
    </DialogActions>

</MudDialog>

<style>
    .dialog-footer {
        padding: 16px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .action-button {
        margin: 0 8px;
    }
</style>

@code {
    private AssetItemCreateForm _assetItemCreateForm;

    [CascadingParameter] public required MudDialogInstance ProductDialog { get; set; }

    [Parameter] public bool ShowError { get; set; }

    private void Cancel()
    {
        _assetItemCreateForm.ShowError = false;
        ProductDialog.Cancel();
    }


    public async Task SaveChanges()
    {
        bool hasErrors = _assetItemCreateForm.ErrorsInForm();

        if (hasErrors)
        {
            return;
        }

        await _assetItemCreateForm.SaveChanges();
        ProductDialog.Close();
    }

}
