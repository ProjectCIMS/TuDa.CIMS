@inherits AssetItemCreateForm


<!-- AssetItemDialog -->

<MudDialog>
    <TitleContent>
        <MudContainer Class="d-flex justify-content-between align-items-center"
                      Style="padding: 0; margin: 0; width: 100%;">
            <MudText Typo="Typo.h6">
                Eintrag erstellen
            </MudText>
            <MudIconButton Icon="@Icons.Material.Filled.Close"
                           Color="Color.Inherit"
                           OnClick="Cancel"/>
        </MudContainer>
    </TitleContent>
    <!-- Modal Body -->
    <DialogContent>
        <AssetItemCreateForm/>
    </DialogContent>
    <!-- Modal Footer -->
    <DialogActions>
        <MudButton OnClick="Cancel"
                   Color="Color.Secondary">
            Schließen
        </MudButton>
        <MudButton OnClick="HandleSave"
                   Color="Color.Primary">
            Änderungen speichern
        </MudButton>
    </DialogActions>

</MudDialog>

@code {
    [CascadingParameter] public required MudDialogInstance ProductDialog { get; set; }

    private void Cancel() => ProductDialog.Cancel();
}
