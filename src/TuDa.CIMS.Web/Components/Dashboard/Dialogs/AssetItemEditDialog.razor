<MudDialog>
    <TitleContent>
        <MudContainer Class="d-flex justify-content-between align-items-center"
                      Style="padding: 0; margin: 0; width: 100%;">
            <MudText Typo="Typo.h6">
                Eintrag erstellen
            </MudText>
            <MudIconButton Icon="@Icons.Material.Filled.Close"
                           Color="Color.Inherit"
                           OnClick="Cancel"/>
        </MudContainer>
    </TitleContent>
    <!-- Modal Body -->
    <DialogContent>
        <AssetItemEditForm @ref="_assetItemEditForm" OnValidation="@(_ => StateHasChanged())" UpdateItem="Item"/>
    </DialogContent>
    <!-- Modal Footer -->
    <DialogActions>
        <MudButton OnClick="Cancel"
                   Color="Color.Secondary"
                   Class="me-auto">
            Schließen
        </MudButton>
        <MudButton OnClick="DeleteAsync"
                   Color="Color.Error"
                   Variant="Variant.Filled">
            Löschen
        </MudButton>
        <MudButton OnClick="AssetItemEditFormLoad"
                   Color="Color.Primary">
            Zurücksetzen
        </MudButton>
        <MudButton OnClick="SaveChanges"
                   Color="Color.Success"
                   Variant="Variant.Filled">
            Änderungen speichern
        </MudButton>
    </DialogActions>

</MudDialog>
