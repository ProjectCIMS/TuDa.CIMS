<MudDialog>
    <TitleContent>
        <MudContainer Class="d-flex justify-content-between align-items-center"
                      Style="padding: 0; margin: 0; width: 100%;">
            <MudText Typo="Typo.h6">
                Eintrag bearbeiten
            </MudText>
            <MudIconButton Icon="@Icons.Material.Filled.Close"
                           Color="Color.Inherit"
                           OnClick="Cancel"/>
        </MudContainer>
    </TitleContent>
    <!-- Modal Body -->
    <DialogContent>
        <AssetItemEditForm @ref="_assetItemEditForm" OnValidation="@(_ => StateHasChanged())" UpdateItem="Item"/>
    </DialogContent>
    <!-- Modal Footer -->
    <DialogActions>
        <MudContainer Class="d-flex justify-between align-items-center p-3">
            <MudButton OnClick="Cancel"
                       Color="Color.Secondary"
                       Class="me-auto mx-1">
                Schließen
            </MudButton>
            <MudButton OnClick="AssetItemEditFormLoad"
                       Color="Color.Primary"
                       Class="mx-1">
                Zurücksetzen
            </MudButton>
            <MudButton OnClick="DeleteItem"
                       Color="Color.Error"
                       Variant="Variant.Filled"
                       Class="mx-1">
                Löschen
            </MudButton>
            <MudButton OnClick="SaveChanges"
                       Color="Color.Success"
                       Variant="Variant.Filled"
                       Class="mx-1">
                Speichern
            </MudButton>
        </MudContainer>
    </DialogActions>
</MudDialog>
