@inherits AssetItemForm
@* Consumable Item Form *@

<MudForm>
    <MudTextField @bind-Value="Manufacturer"
                  Label="Manufacturer"
                  Placeholder="Enter Manufacturer"
                  Variant="Variant.Filled"
                  FullWidth/>

    <MudTextField @bind-Value="SerialNumber"
                  Label="SerialNumber"
                  Placeholder="Enter Serial Number"
                  Variant="Variant.Filled"
                  FullWidth/>

    <MudNumericField @bind-Value="ConsumableAmount"
                     Label="Amount"
                     Placeholder="Enter Amount"
                     Variant="Variant.Filled"
                     FullWidth/>

    <MudButton Color="Color.Primary"
               Class="mt-3"
               @onclick="ResetConsumableInputs">
        Clear
    </MudButton>
</MudForm>

@code
{
    /// <summary>
    /// Resets the Input lines
    /// </summary>
    protected void ResetConsumableInputs()
    {
        Manufacturer = string.Empty;
        SerialNumber = string.Empty;
        ConsumableAmount = 0;
    }
}
