<!--- Shopping cart footer component -->
<MudContainer MaxWidth="MaxWidth.Large" Class="d-flex justify-end align-center p-3 rounded-xl"
              MaxHeight="MaxHeight.Small"
              Style="background-color: white;">
    <MudText Typo="Typo.h6" Class="mr-2">Summe: @TotalPrice €</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="OnCheckout"
               StartIcon="@Icons.Material.Filled.Check">
        Bestätigen
    </MudButton>
</MudContainer>
