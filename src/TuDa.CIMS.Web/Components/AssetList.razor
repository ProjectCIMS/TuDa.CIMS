@* grid with one column for items *@
<div class="container text-center">
    <div class="col">
        @foreach (var item in Items)
        {
            <div
                class="row custom-checkbox-container">
                <p>@item</p>
                <label class="custom-checkbox">
                    <input type="checkbox"
                           class="form-check-input"
                           aria-label="...">
                    <span class="checkmark"> </span>
                </label>
            </div>
        }
    </div>
</div>

