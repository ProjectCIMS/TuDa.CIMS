<style>
    /* row style */
    .row {
        background-color: lightgreen;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 10px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .row p {
        margin: 0;
    }

    /*  checkbox */
    .custom-checkbox {
        position: relative;
        display: inline-block;
        width: 20px;
        height: 20px;
        margin-left: 10px;
    }

    /* hide default checkbox */
    .custom-checkbox input {
        opacity: 0;
        position: absolute;
        cursor: pointer;
        height: 0;
        width: 0;
    }


    .checkmark {
        position: absolute;
        top: 0;
        left: 0;
        height: 20px;
        width: 20px;
        background-color: green;
        border: 2px solid darkgreen;
        border-radius: 5px;
    }

    /* background color when checked */
    .custom-checkbox input:checked ~ .checkmark {
        background-color: green;
    }


    .checkmark:after {
        content: "";
        position: absolute;
        display: none;
    }


    .custom-checkbox input:checked ~ .checkmark:after {
        display: block;
    }

    /* checkmark style */
    .checkmark:after {
        left: 7px;
        top: 3px;
        width: 4px;
        height: 8px;
        border: solid white;
        border-width: 0 2px 2px 0;
        transform: rotate(45deg);
    }

    /* pagination style */
    .pagination {
        margin-top: 20px;
        display: flex;
        justify-content: center;
        list-style-type: none;
        padding: 0;
    }

    .page-item {
        margin: 0 5px;
    }

    .page-link {
        text-decoration: none;
        padding: 8px 12px;
        border: 1px solid #007bff;
        color: #007bff;
        border-radius: 4px;
        transition: background-color 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* style for disabled page item */
    .page-item.disabled .page-link {
        color: #6c757d;
        pointer-events: none;
    }

    /* style for active page item */
    .page-item.active .page-link {
        background-color: #007bff;
        color: white;
    }

    /* style for hovering */
    .page-link:hover {
        background-color: #0056b3;
        color: white;
    }
</style>
