@using TuDa.CIMS.Shared.Entities
@using TuDa.CIMS.Shared.Entities.Enums

<!--Product Price per Unit-->
<MudItem xs="12">
    @if (Product is Substance substance)
    {
    <MudText Typo="Typo.subtitle2">
        @{
        string priceDescription = substance.PriceUnit switch
        {
        PriceUnits.PerKilo => $"{substance.Price}€/kg",
        PriceUnits.PerLiter => $"{substance.Price}€/l",
        PriceUnits.PerPiece => $"{substance.Price}€/Stück",
        _ => $"{substance.Price}€ {substance.PriceUnit}"
        };
        }
        @priceDescription
    </MudText>
    }
    else
    {
    <MudText Typo="Typo.subtitle2">@($"{Product.Price}€/Stück")</MudText>
    }
</MudItem>

@code {
    // Product to be shown in Dialog.
    [Parameter] public AssetItem Product { get; set; }
}
