<MudContainer MaxWidth="MaxWidth.Small" Class="bg-white rounded-xl">
    <MudDataGrid Items="@Purchases"
                 FixedHeader="@true"
                 SortMode="SortMode.None"
                 Hover="@true">
        <Columns>
            <PropertyColumn
                Property="@(p => p.CompletionDate)"
                Title="Datum"/>
            <PropertyColumn
                Property="@(p => p.TotalPrice)"
                Title="Preis"/>
            <TemplateColumn CellClass="d-flex justify-end">
                <CellTemplate>
                    <MudIconButton Size="@Size.Small"
                                   Icon="@Icons.Material.Outlined.Delete"
                                   @onclick="@(NavigateToPurchase)"/>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
    </MudDataGrid>
</MudContainer>
