@using TuDa.CIMS.Shared.Entities

<MudStack>
    <MudDataGrid Items="@_students"
                 FixedHeader
                 SortMode="SortMode.None"
                 Hover>
        <Columns>
            <PropertyColumn
                Property="@(p => p.FirstName)"
                Title="Vorname"/>
            <PropertyColumn
                Property="@(p => p.Name)"
                Title="Nachname"/>
            <PropertyColumn
                Property="@(p => p.PhoneNumber)"
                Title="Telefonnummer"/>
            <PropertyColumn
                Property="@(p => p.Email)"
                Title="E-Mail"/>
            <TemplateColumn CellClass="d-flex justify-end">
                <CellTemplate>
                    <MudIconButton Size="@Size.Small"
                                   Icon="@Icons.Material.Outlined.Edit"
                                   Color="Color.Primary"
                                   Onclick="@(() => EditBuyer(context.Item!))"/>
                    <MudIconButton Size="@Size.Small"
                                   Icon="@Icons.Material.Outlined.Delete"
                                   Color="Color.Error"
                                   Onclick="@(() => RemoveBuyer(context.Item!))"/>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <PagerContent>
            <MudDataGridPager T="Student"
                              RowsPerPageString="Personen pro Seite:"
                              PageSizeOptions="@( [5, 10, 20])"/>
        </PagerContent>
    </MudDataGrid>
    <MudButton Class="mb-2"
               FullWidth
               Variant="Variant.Filled"
               StartIcon="@Icons.Material.Filled.Add"
               Color="Color.Success"
               OnClick="@AddBuyerDialog">
        Hinzufügen
    </MudButton>
</MudStack>

