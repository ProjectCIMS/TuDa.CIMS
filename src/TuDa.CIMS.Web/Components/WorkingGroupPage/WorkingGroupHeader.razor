<MudItem Class="d-flex justify-content-between align-items-center">
    <!-- Linke Gruppe: Text + Info-Icon direkt nebeneinander -->
    <div class="d-flex align-items-center">
        <MudText Typo="Typo.h5" Class="me-2"> @ProfessorTitle @ProfessorName </MudText>
        <MudIconButton Icon="@Icons.Material.Filled.Info" Color="Color.Primary"
                       OnClick="OpenInformationDialog"></MudIconButton>
    </div>

    <!-- Rechte Gruppe: Button (ganz rechts) -->
    <MudButton Variant="Variant.Outlined" Color="@(IsDeactivated ? Color.Success : Color.Error)"
               OnClick="ToggleWorkingGroupStatus">
        @(IsDeactivated ? "Aktivieren" : "Deaktivieren")
    </MudButton>
</MudItem>
