<MudContainer MaxWidth="MaxWidth.Large" Class="d-flex justify-content-between align-items-center p-3 rounded white">
    <MudItem Class="d-flex justify-content-between align-items-center">
        <MudText Typo="Typo.h5"> @ProfessorTitle
            @ProfessorName</MudText>
        <MudIconButton Icon="@Icons.Material.Filled.Info" Color="Color.Primary" OnClick="OpenInformationDialog"></MudIconButton>
    </MudItem>
    @if (IsDeactivated)
    {
        <MudButton Class="align-items-end" Variant="Variant.Outlined" Color="Color.Success" OnClick="ToggleWorkingGroupStatus">
            Aktivieren
        </MudButton>
    }
    else
    {
        <MudButton Class="align-items-end" Variant="Variant.Outlined" Color="Color.Error" OnClick="ToggleWorkingGroupStatus">
            Deaktivieren
        </MudButton>
    }
</MudContainer>
