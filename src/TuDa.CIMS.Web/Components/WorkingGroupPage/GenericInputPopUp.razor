
<MudDialog>
    <TitleContent>
        @Field["DialogTitle"][0]
    </TitleContent>
    <DialogContent>
        @for(int i = 0; i < Field["Values"].Count; i++)
        {
            <MudTextField T="string" @bind-Value="@Field["Values"][i]" Label="@Field["Label"][i]" Required="true" />
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Error">Abbrechen</MudButton>
        <MudButton OnClick="Save" Color="Color.Success">Speichern</MudButton>
    </DialogActions>
</MudDialog>
