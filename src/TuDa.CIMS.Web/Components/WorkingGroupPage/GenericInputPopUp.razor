<MudDialog>
    <DialogContent>
        <MudForm @ref="_form">
            @foreach (var field in Fields)
            {
                <MudTextField
                    @bind-Value="field.Value"
                    Label="@field.Label"
                    RequiredError="@($"{field.Label} muss gefüllt werden.")"
                    Required="@field.Required"/>
            }
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(Cancel)" Color="Color.Error">Abbrechen
        </MudButton>
        <MudButton OnClick="@(Submit)"
                   Color="Color.Success">@YesText</MudButton>
    </DialogActions>
</MudDialog>
