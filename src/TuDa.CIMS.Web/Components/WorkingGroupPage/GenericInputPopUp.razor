<MudDialog>
    <DialogContent>
        <MudForm>
            @foreach (var i in Enumerable.Range(0, Field.Labels.Count))
            {
                <MudTextField
                    @bind-Value="Field.Values[i]"
                    Label="@Field.Labels[i]"/>
            }
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() =>
                            {
                                Cancel();
                                Snackbar.Add("Der Vorgang wurde abgebrochen", Severity.Warning);
                            })" Color="Color.Error">Abbrechen
        </MudButton>
        <MudButton OnClick="@(() =>
                            {
                                Submit();
                                Snackbar.Add("Der Vorgang wurde erfolgreich abgeschlossen", Severity.Success);
                            })"
                   Color="Color.Success">@Field.YesText</MudButton>

    </DialogActions>
</MudDialog>
