<MudDialog>
    <DialogContent>
        <MudForm>
            @for (int i = 0; i < _values.Count; i++)
            {
                int index = i;
                <MudTextField
                    @bind-Value="_values[index]"
                    Label="@_labels[index]"/>
            }
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Error">Abbrechen</MudButton>
        <MudButton OnClick="Submit" Color="Color.Success">Speichern</MudButton>
    </DialogActions>
</MudDialog>
