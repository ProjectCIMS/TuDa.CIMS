<MudDialog>
    <DialogContent>
        <MudForm>
            @for(var i = 0; i< Fields.Count; i++)
            {
                <MudTextField
                    @bind-Value="Fields[i].Value"
                    Label="@Fields[i].Label"
                    Required="@Fields[i].Required"/>
            }
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(Cancel)" Color="Color.Error">Abbrechen
        </MudButton>
        <MudButton OnClick="@(Submit)"
                   Color="Color.Success">@YesText</MudButton>
    </DialogActions>
</MudDialog>
