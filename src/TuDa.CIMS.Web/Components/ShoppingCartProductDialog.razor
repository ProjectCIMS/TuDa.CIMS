<!-- The Dialog for Amount Input -->
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h5">
            Amount Input
        </MudText>
    </TitleContent>
    <DialogContent>
        <!-- Product View -->
        <MudGrid>
            <MudItem xs="12">
                <MudCard>
                    <MudCardContent>
                        <MudGrid>
                            <!-- Product Name -->
                            <MudItem xs="12">
                                <MudText Typo="Typo.subtitle1">@Product.Name</MudText>
                            </MudItem>
                            <!-- € per Unit -->
                            <ShoppingCartPriceView Product="@Product"/>
                        </MudGrid>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <!-- Amount Input -->
            <MudItem xs="12">
                <MudTextField @bind-Value="Amount"
                              Error="@isError"
                              ErrorText="Amount must be a positive number"
                              InputMode="@InputMode.numeric"
                              InputType="@InputType.Number"
                              Label="Amount"
                              T="int"/>
            </MudItem>
        </MudGrid>
    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Error"
                   OnClick="Cancel">
            Cancel
        </MudButton>
        <MudButton Color="Color.Success"
                   OnClick="AddProduct">
            Add
        </MudButton>
    </DialogActions>
</MudDialog>
