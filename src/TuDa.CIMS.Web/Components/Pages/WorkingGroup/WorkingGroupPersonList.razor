@page "/"

<MudContainer MaxWidth="MaxWidth.Small">
    <MudDataGrid Items="@Persons"
                 FixedHeader="@true"
                 SortMode="SortMode.None"
                 Hover="@true">
        <Columns>
            <PropertyColumn
                Property="@(p => p.FirstName)"
                Title="Vorname"/>
            <PropertyColumn
                Property="@(p => p.Name)"
                Title="Nachname"/>
            <PropertyColumn
                Property="@(p => p.)"
                Title="E-Mail"/>
            <TemplateColumn CellClass="d-flex justify-end">
                <CellTemplate>
                    <MudIconButton Size="@Size.Small"
                                   Icon="@Icons.Material.Outlined.Delete"
                                   @onclick="@()"/>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
    </MudDataGrid>
</MudContainer>


