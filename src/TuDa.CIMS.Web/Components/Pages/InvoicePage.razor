@page "/working-groups/{workingGroupId:guid}/invoice"
<MudContainer MaxWidth="MaxWidth.Large">
    <MudGrid>
        <MudItem xs="12">
            <MudField Class="bg-white" Typo="Typo.h6" Variant="Variant.Outlined">@BuyerString</MudField>
        </MudItem>
        <MudItem xs="6">
            <MudPaper>
                <MudItem>
                    <MudText>Zeitraum:</MudText>
                </MudItem>
                <MudItem Class="p-2">
                    <MudDateRangePicker DateRange="@_dateRange" Margin="Margin.Dense" Clearable="true"
                                        PlaceholderStart="Startdatum" PlaceholderEnd="Enddatum"
                                        DateRangeChanged="@OnDateRangeChanged" Variant="Variant.Filled"/>
                </MudItem>
                <MudDivider DividerType="DividerType.Middle" Class="my-6"/>
                <MudItem Class="p-2">
                    <MudDatePicker Label="Fälligkeitsdatum" @bind-Date="@SelectedDueDate"/>
                </MudItem>
                <MudDivider DividerType="DividerType.Middle" Class="my-6"/>
                <MudItem Class="p-2">
                    <MudTextField Label="Rechnungsnummer" @bind-Value="@SelectedInvoiceNumber" Clearable="true">
                    </MudTextField>
                </MudItem>
                <MudDivider DividerType="DividerType.Middle" Class="my-6"/>
                <MudItem Class="p-2">
                    <MudStack Spacing="2">
                        <MudText>Statistiken:</MudText>
                        <MudStack Spacing="1" Class="m-lg-4">
                            <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                                <MudText>Chemikalien:</MudText>
                                <MudText Align="Align.Right">@GetTotalPriceChemicals()</MudText>
                            </MudStack>
                            <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                                <MudText>Verbrauchsgegenstände:</MudText>
                                <MudText Align="Align.Right">@GetTotalPriceConsumables()</MudText>
                            </MudStack>
                            <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                                <MudText>Lösungsmittel:</MudText>
                                <MudText Align="Align.Right">@GetTotalPriceSolvents())</MudText>
                            </MudStack>
                            <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                                <MudText>Technische Gase:</MudText>
                                <MudText Align="Align.Right">@GetTotalPriceGasCylinders()</MudText>
                            </MudStack>
                        </MudStack>
                    </MudStack>
                </MudItem>
                <MudDivider DividerType="DividerType.Middle" Class="my-6"/>
                <MudItem>
                    <MudStack AlignItems="AlignItems.End">
                        <MudButton Size="Size.Large" Color="Color.Success" Variant="Variant.Filled"
                                   OnClick="@(() => OpenPdf())">
                            <MudIcon Icon="@Icons.Material.Filled.Add"/> PDF GENERIEREN
                        </MudButton>
                    </MudStack>
                </MudItem>
            </MudPaper>
        </MudItem>
        <MudItem xs="6">
            <MudPaper>
                <MudStack Spacing="2" AlignItems="AlignItems.Center">
                    <MudText Align="Align.Center">PDF-Anzeige</MudText>
                    <MudImage Src="images/pdf-placeholder.png"
                              Height="300" Width="300" Alt="PDF Placeholder" Class="rounded-lg"/>
                    <MudButton Size="Size.Large" Variant="Variant.Filled" Color="Color.Primary" Disabled="true">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Disabled="true"/> SPEICHERN
                    </MudButton>
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>
