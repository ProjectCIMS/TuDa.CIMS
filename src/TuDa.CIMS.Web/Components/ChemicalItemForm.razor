
@inherits AssetItemForm
@* Substance Item Form *@

<div class="mt-3">


    <label class="form-label"
           for="chemicalCas">
        CAS
    </label>
    <input @bind-value="@Cas"
           class="form-control"
           id="chemicalCas"
           placeholder="Enter CAS"
           type="text"/>

    <label class="form-label"
           for="purity">
        Purity
    </label>
    <input @bind-value="@Purity"
           class="form-control"
           id="purity"
           placeholder="Enter Purity"
           type="number"/>

    <label class="form-label"
           for="bindingSize">
        BindingSize
    </label>
    <input @bind-value="@BindingSize"
           class="form-control"
           id="bindingSize"
           placeholder="Enter Binding Size"
           type="number"/>
</div>


