@* Filter *@

<!-- Frame -->
<form>
    <div class="bg-light p-3 rounded"
         style="width: 250px;">


        <!-- Keyword Tags -->
        <h6>Keywords</h6>
        <div class="d-flex flex-wrap gap-2 mb-3">
            @foreach (var keyword in Keywords)
            {
                <span class="badge bg-secondary">
                    @keyword
                    <button class="btn-close btn-close-white btn-sm ms-2"
                            @onclick="() => RemoveKeyword(keyword)">
                    </button>
                </span>
            }
        </div>


        <!-- Checkbox List -->
        @foreach (var item in CheckboxItems)
        {
            <div class="check form mb-2">
                <input class="form-check-input"
                       id="@item.Label"
                       type="checkbox"
                       value="">
                <label class="form-check-label"
                       for="@item.Label">
                    <strong>@item.Label</strong>
                    <div class="small text-muted">
                        @item.Description
                    </div>
                </label>
            </div>
        }
        <!-- Slider -->
        <div class="mt-3">
            <label class="form-label"
                   for="priceSlider">
                <strong>Label</strong>
            </label>
            <div class="d-flex justify-content-between small">
                <span>@MinPrice€</span>
                <span>@MaxPrice€</span>
            </div>
            <input class="form-range"
                   id="priceSlider"
                   type="range">
        </div>
    </div>
</form>

@code {

// Keywords for the Filter
    private List<string> Keywords { get; set; } = ["Keyword", "Key", "Word"];

    private void RemoveKeyword(string keyword)
    {
        Keywords.Remove(keyword);
    }

// Checkbox Item Class
    private class CheckboxItem
    {
        public required string Label { get; set; }
        public required string Description { get; set; }
    }

// List of CheckboxItem Objects
    private List<CheckboxItem> CheckboxItems { get; set; } =
    [
        new CheckboxItem { Label = "Label", Description = "Description" },
        new CheckboxItem { Label = "Label", Description = "Description" },
        new CheckboxItem { Label = "Label", Description = "Description" }
    ];


// Max and Min of the Slider
    private int MinPrice { get; set; } = 0;
    private int MaxPrice { get; set; } = 100;
}
