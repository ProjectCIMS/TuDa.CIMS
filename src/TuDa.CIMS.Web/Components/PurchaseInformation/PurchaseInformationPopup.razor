<MudDialog>
    <TitleContent>
        <MudItem>@Purchase.CompletionDate?.ToString("dd.MM.yyyy")</MudItem>
        <MudItem>
            @if (Purchase.Invalidated)
            {
                <MudChip T="string" Color="Color.Error">Rechnung ist ung√ºltig</MudChip>
            }
            @if (!Purchase.Invalidated)
            {
                <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="@(() => GoToInvalidation())">
                    Invalidieren
                </MudButton>
            }
        </MudItem>
    </TitleContent>
    <DialogContent>
            <MudItem xs="6">
                <PurchaseInformationPurchaseEntryList Purchase="Purchase"/>
            </MudItem>
            <MudItem xs="6">
                <MudStack>
                    <MudItem>
                        <PurchaseInformationBuyerInformation Purchase="Purchase"/>
                    </MudItem>
                    <MudItem>
                        <PurchaseInformationStatistics Purchase="Purchase"/>
                    </MudItem>
                </MudStack>
            </MudItem>
    </DialogContent>
</MudDialog>
