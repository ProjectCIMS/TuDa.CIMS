<MudDialog>
    <TitleContent>
        <MudItem>@Purchase.CreatedAt.ToString("dd.MM.yyyy")</MudItem>
        <MudItem>
            @if (Purchase.Invalidated)
            {
                <MudChip T="string" Color="Color.Error">Rechnung ist ung√ºltig</MudChip>
            }
            @if (!Purchase.Invalidated)
            {
                <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="@(() => GoToInvalidation())">
                    Invalidieren
                </MudButton>
            }
        </MudItem>
    </TitleContent>
    <DialogContent>
        <MudItem xs="6">
            <CascadingValue Value="Purchase">
                <PurchaseInformationPurchaseEntryList PurchaseId="PurchaseId" WorkingGroupId="WorkingGroupId"/>
            </CascadingValue>
        </MudItem>
        <MudItem xs="6">
            <MudStack>
                <MudItem>
                    <CascadingValue Value="Purchase">
                        <PurchaseInformationBuyerInformation PurchaseId="PurchaseId" WorkingGroupId="WorkingGroupId"/>
                    </CascadingValue>
                </MudItem>
                <MudItem>
                    <CascadingValue Value="Purchase">
                        <PurchaseInformationStatistics PurchaseId="PurchaseId" WorkingGroupId="WorkingGroupId"/>
                    </CascadingValue>
                </MudItem>
            </MudStack>
        </MudItem>
    </DialogContent>
</MudDialog>
