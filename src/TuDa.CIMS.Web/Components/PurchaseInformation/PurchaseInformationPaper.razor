<MudPaper Elevation="3" Class="p-4">
    <MudStack Spacing="2">
        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
            <MudText Typo="Typo.h6">@Purchase.CreatedAt.ToString("dd.MM.yyyy")</MudText>
            @if (Purchase.Invalidated)
            {
                <MudChip T="string" Color="Color.Error">Rechnung ist ung√ºltig</MudChip>
            }
            @if(!Purchase.Invalidated){
            <MudButton Variant="Variant.Filled" Color="Color.Error">Invalidieren</MudButton>
            }
        </MudStack>

        <MudGrid>
            <MudItem xs="6">
                <PurchaseInformationPurchaseEntryList PurchaseId="PurchaseId" WorkingGroupId="WorkingGroupId"/>
            </MudItem>
            <MudItem xs="6">
                <MudStack>
                    <MudItem>
                        <PurchaseInformationBuyerInformation PurchaseId="PurchaseId" WorkingGroupId="WorkingGroupId"/>
                    </MudItem>
                    <MudItem>
                        <PurchaseInformationStatistics PurchaseId="PurchaseId" WorkingGroupId="WorkingGroupId"/>
                    </MudItem>
                </MudStack>
            </MudItem>
        </MudGrid>
    </MudStack>
</MudPaper>
